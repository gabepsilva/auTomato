<div class="show-action-header" %>
  <div class="container">

    <h2> AuTomato Dashboard </h2>
    <h5> &emsp; Running on <%= Rails.env %> mode. Version 1.2.1 </h5>

    <hr/>
    <%= link_to '<i class="glyphicon glyphicon-plus">  </i> More info'.html_safe, '#', style: 'color: white'; %>
    |
    <%= link_to '<i class="glyphicon glyphicon-edit">  </i> Edit change'.html_safe, '#', style: 'color: white'; %>
    |
    <%= link_to '<i class="glyphicon glyphicon-th-large">  </i> Clone to'.html_safe, '#', style: 'color: white'; %>
    |
    <%= link_to '<i class="glyphicon glyphicon-folder-close">  </i> Close request'.html_safe, '#', style: 'color: white'; %>

  </div>
</div>

<%= render 'layouts/messages' %>


<div class="container">


  <br>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary ">
        <div class="panel-heading">
          <h3 class="panel-title">Next in calendar ...</h3>
        </div>
        <div class="panel-body">


          <table class="table table-hover table-responsive">
            <thead>
            <tr>
              <th>Change name</th>
              <th>Owner</th>
              <th>Project</th>
              <th>Implementation date</th>
            </tr>
            </thead>

            <tbody>
            <% @changes.each do |change| %>
                <tr>
                  <td><%= link_to change.name, change %> </td>
                  <td><%= link_to change.owner.name, change.owner unless change.owner.nil? %> </td>
                  <td><%= link_to change.project.name, change.project %> </td>
                  <% unless change.implementation_date.nil? %>
                      <td><%= link_to change.implementation_date.strftime("%A, %B %d, %Y %H:%M %p"), change %> </td>
                  <% end %>
                </tr>
            <% end %>

            </tbody>
          </table>


        </div>
      </div>
    </div>
  </div>


  <div class="row">

    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Projects</h3>
        </div>
        <div class="panel-body">

          <h4> <%= link_to '+ New Project', new_project_path %> </h4>

          <table class="table table-hover table-responsive">
            <thead>
            <tr>
              <th>Project name</th>
              <th>Description</th>
              <th>Members</th>
            </tr>
            </thead>
            <tbody>
            <% @projects.each do |project| %>
                <tr>
                  <td><%= link_to project.name, project %> </td>
                  <td><%= project.description %></td>
                  <td>
                    <% project.members.each do |mb| %>
                        <%= link_to mb.name, mb %>
                    <% end %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Changes</h3>
        </div>
        <div class="panel-body">

          <h4> <%= link_to '+ New Change', new_change_path %> </h4>

          <table class="table table-hover table-responsive">
            <thead>
            <tr>
              <th>Change name</th>
              <th>Owner</th>
              <th>Project</th>
            </tr>
            </thead>

            <tbody>
            <% @changes.each do |change| %>
                <tr>
                  <td><%= link_to change.name, change %> </td>
                  <td><%= link_to change.owner.name, change.owner unless change.owner.nil? %> </td>
                  <td><%= link_to change.project.name, change.project %> </td>
                </tr>
            <% end %>

            </tbody>
          </table>

        </div>
      </div>
    </div>


  </div>
</div>




