<!-- Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">

        <%= bootstrap_form_for(@step) do |f| %>
            <% if @step.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h2>

                  <ul>
                    <% @step.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <%= f.hidden_field :change_id %>

            <%= f.number_field :stepNo, label: 'Step #' %>

            <%= f.text_field :action, label: 'Action' %>


            <hr/>
            <%= f.fields_for :assignedTo, @step.assignedTo do |c| %>
                <%= c.number_field :id, label: 'Assigned to (ID):' %>
            <% end %>
            <hr/>

            <%= f.text_field :status, label: 'Status' %>


            <div class="modal-footer">
              <%= f.submit class: 'btn btn-info' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
