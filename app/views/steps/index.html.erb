<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Steps</h1>

  <table class="table table-hover table-responsive">
    <thead>
    <tr>
      <th>Stepno</th>
      <th>Action</th>
      <th>Status</th>
      <th>Log</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @steps.each do |step| %>
        <tr>
          <td><%= step.stepNo %></td>
          <td><%= step.action %></td>
          <td> <spam class="label label-primary"> <%= step.status %> </spam></td>
          <td><%= step.log %></td>
          <td><%= link_to 'Show', step %></td>
          <td><%= link_to 'Edit', edit_step_path(step) %></td>
          <td><%= link_to 'Destroy', step, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Step', new_step_path %>
</div>