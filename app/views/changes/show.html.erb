<div class="container">

  <p id="notice"><%= notice %></p>


  <h2> <%= @change.name %> </h2>
  <p>
  <h5><%= @change.description %></h5>
  </p>


  <p>
  <h4>
    <%= link_to " + Add Step", new_step_path(@change.id) %>
  </h4>
  </p>

  <table class="table table-hover table-responsive">
    <thead>
    <tr>
      <th>#</th>
      <th>Action</th>
      <th>Status</th>
      <th>Log</th>
      <th>Assigned to</th>
    </tr>
    </thead>

    <tbody>
    <% @steps.each do |step| %>
        <tr>
          <td><strong><%= link_to step.stepNo, edit_step_path(step), remote: true %></strong></td>
          <td><%= link_to step.action, edit_step_path(step), remote: true %></td>
          <td><%= link_to step.status, edit_step_path(step), remote: true, class: 'label', style: "background-color: #{@colors.find_by_name(step.status).color}" %> </td>
          <td><%= link_to '<span class="glyphicon glyphicon-folder-open"></span>'.html_safe, step %></td>
          <td><%= link_to step.assignedTo.name, step.assignedTo %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>

<div class="js-edit-modal"></div>

