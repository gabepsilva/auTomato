<div class="show-action-header" %>
  <div class="container">
    <h2> <%= @change.name %> </h2>
    <h5> &emsp; <%= @change.description %></h5>
    <hr/>
    <%= link_to '<i class="glyphicon glyphicon-plus">  </i> More info'.html_safe, edit_change_path(@change), style: 'color: white'; %> |
    <%= link_to '<i class="glyphicon glyphicon-edit">  </i> Edit change'.html_safe, edit_change_path(@change), style: 'color: white'; %> |
    <%= link_to '<i class="glyphicon glyphicon-th-large">  </i> Clone to'.html_safe, edit_change_path(@change), style: 'color: white'; %> |
    <%= link_to '<i class="glyphicon glyphicon-folder-close">  </i> Close request'.html_safe, edit_change_path(@change), style: 'color: white'; %>
  </div>
</div>

<% if @change.errors.any? %>
    <div class="error_explanation">
      <div class="container">
        <%= pluralize(@change.errors.count, "error") %> prohibited this project from being saved.
      </div>
    </div>
<% end %>




<%= render 'layouts/messages' %>

<div class="container">


  <br/>


  <h4>
    <%= link_to " + Add Step", new_step_path(@change.id) %>
  </h4>
  <br/>


  <table class="table table-hover table-responsive">
    <thead>
    <tr>
      <th>#</th>
      <th>Action</th>
      <th>Status</th>
      <th>Log</th>
      <th>Assigned to</th>
    </tr>
    </thead>

    <tbody>
    <% @steps.each do |step| %>
        <tr>
          <td><strong><%= link_to step.stepNo, edit_step_path(step), remote: true %></strong></td>
          <td><%= link_to step.action, edit_step_path(step), remote: true %></td>
          <td><%= link_to step.status, edit_step_path(step), remote: true, class: 'label', style: "background-color: #{@colors.find_by_name(step.status).color}" %> </td>
          <td><%= link_to "<span class='badge alert-info'>#{step.logs.count}</span>".html_safe, step %></td>
          <td><%= link_to step.assignedTo.name, step.assignedTo %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>

<div class="js-edit-modal"></div>

