<div class="container">

  <br/><br/>

  <%= bootstrap_form_for(change) do |f| %>

      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :name, label: 'Change name' %>
        </div>
        <div class="col-sm-6">

          <%= f.fields_for :project_attributes, @change.project do |c| %>
              <%= c.number_field :id, label: 'Project (ID):' %>
          <% end %>


        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">


          <%= f.fields_for :owner_attributes, @change.owner do |c| %>
              <%= c.number_field :id, label: 'Owner (ID):' %>
          <% end %>


        </div>
        <div class="col-sm-6">

          <label>Implementation date:</label>

          <div class='input-group date' id='datetimepicker1'>
<span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <%= f.datetime_local_field(:implementation_date, skip_label: true) %>


          </div>


          <script type="text/javascript">
            $(function () {
              $('#datetimepicker1').datetimepicker({
                format: 'LLLL'
              });
            });
          </script>


        </div>
      </div>


      <%= f.text_area :description, label: 'Change Desription', rows: 10 %>
      <%= f.submit %>

  <% end %>

</div>

